{
  "framework": "mocha+chai",
  "src_files": [
    "test/*.test.js"
  ],
  "serve_files": [
    "test/*.bundle.js"
  ],
  "before_tests": "webpack --config webpack.testem.config.js",
  "launchers": {
    "Node": {
      "command": "mocha --require babel-core/register -R tap",
      "protocol": "tap"
    },
    "Chrome": {
      "command": "mocha --require babel-core/register -R tap",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "Node",
    "Chrome"
  ]
}
