{
  "name": "transfer-alert",
  "version": "1.0.0",
  "description": "Create an alert when is the right time to transfer money based on live exchange rates",
  "main": "app/app.js",
  "scripts": {
    "test": "env NODE_ENV=test testem ci -l Node Chrome",
    "codecov": "nyc --reporter=lcov --reporter=text-lcov npm run test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint src/app.js",
    "clean": "rimraf dist/*",
    "dev": "webpack-dev-server --env.dev --hot",
    "prebuild": "npm run clean",
    "build": "webpack -p --env.prod",
    "validate": "npm-run-all --parallel lint build codecov",
    "debug": "node-nightly --inspect --debug-brk node_modules/.bin/webpack --env.debug",
    "debug:dev": "npm run debug -- --env.dev",
    "debug:prod": "npm run debug -- --env.prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zanonnicola/transfer-alert.git"
  },
  "keywords": [
    "money",
    "javascript",
    "app",
    "TDD"
  ],
  "author": "Nicola Zanon <nicola.zanon86@gmail.com> (https://nicola-zanon.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zanonnicola/transfer-alert/issues"
  },
  "homepage": "https://github.com/zanonnicola/transfer-alert#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.1.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "coveralls": "^2.11.15",
    "css-loader": "0.23.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "nyc": "^10.0.0",
    "postcss-loader": "^1.2.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "testem": "^1.14.2"
  },
  "dependencies": {
    "babel-runtime": "^6.20.0",
    "chai": "^3.5.0",
    "webpack": "2.1.0-beta.28",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^2.1.0-beta.0",
    "webpack-node-externals": "^1.5.4",
    "webpack-validator": "2.3.0"
